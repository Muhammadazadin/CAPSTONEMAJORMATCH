<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/background"
    >

    <TextView
        android:id="@+id/welcome_joh"
        android:layout_width="222dp"
        android:layout_height="69dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="2dp"
        android:gravity="top"
        android:lineSpacingExtra="-4sp"
        android:text="@string/welcome_joh"
        android:textAppearance="@style/welcome_joh" />

    <TextView
        android:id="@+id/temukan_jur"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:gravity="top"
        android:text="@string/temukan_jur"
        android:textAppearance="@style/temukan_jur"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/view3"
        android:layout_width="218dp"
        android:layout_height="77dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_1">

        <!-- Tambahkan elemen-elemen lain di dalam LinearLayout -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvJurusanku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/major"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:text="Jurusanku"
                android:textColor="#000000"
                android:textSize="12sp" />

            <View
                android:id="@+id/major"
                android:layout_width="48dp"
                android:layout_height="39dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/stack" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvLihatKampus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/building"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="1dp"
                android:text="Kampus"
                android:textColor="#000000"
                android:textSize="12sp" />

            <View
                android:id="@+id/building"
                android:layout_width="48dp"
                android:layout_height="39dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/building" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Profile"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:text="Profile"
                android:textColor="#000000"
                android:textSize="12sp" />

            <View
                android:id="@+id/Profile"
                android:layout_width="48dp"
                android:layout_height="39dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/calendar_month_20" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forum"
            android:textColor="@color/teal_700" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:gravity="left"
            android:text="Diskusi"
            android:textColor="@color/yellow" />

        <View
            android:id="@+id/diskusi1"
            android:layout_width="162dp"
            android:layout_height="61dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rectangle_2" />

        <View
            android:id="@+id/beasiswa"
            android:layout_width="279dp"
            android:layout_height="229dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="158dp"
            android:background="@drawable/rectangle_2" />

        <View
            android:id="@+id/diskusi2"
            android:layout_width="162dp"
            android:layout_height="61dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rectangle_2" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/diskusi2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="28dp"
            android:text="Beasiswa"
            android:textColor="@color/yellow" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/diskusi2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="28dp"
            android:text="Terbaru (Klik Kolom di Bawah)"
            android:textColor="@color/teal_700" />



    </RelativeLayout>

</LinearLayout>
